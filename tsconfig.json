{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"outDir": "./build",
		"sourceMap": true,
		"noImplicitAny": true,
		"experimentalDecorators": true, 
        "emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
